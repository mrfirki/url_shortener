<table>
	<tr>
		<th>Original Url</th>
		<th>Shortened Url</th>
	</tr>

	<% @urls.each do |url| %>
		<tr>
			<td> <a href="<%= url.long_url %>" ><%= url.long_url %></a></td>
			<td> <%= link_to url.short_url, controller: :urls, action: :short, id: url %></td>
			<td> <%= link_to 'Show', url_path(url) %> </td>
			<td><%= link_to 'delete', url_path(url), method: :delete, data: { confirm: 'Are u sure??' } %></td>
		</tr>
	<% end %>
</table>

<%= link_to "Shorten a URL!", new_url_path %>	

